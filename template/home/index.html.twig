{% extends 'main.html.twig' %}

{% block title %}{{ trailers | length }} iTunes Movie trailers{% endblock %}

{% block content %}
    <div class="container">
        <h1 class="mt-5 mb-4">{{ trailers | length }} iTunes Movie trailers</h1>
        <table class="table table-bordered">
            {% for trailer in trailers %}
                <tr>
                    <td width="135" ><img src="{{ trailer.image }}" alt="{{ trailer.title }}" width="135" height="200" border="0" /></td>
                    <td><a href="/trailer/{{ trailer.id }}" title="{{ trailer.title }}">{{ trailer.title }}</a></td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
